<div id="snow-container"></div>

<script>
  const container = document.getElementById("snow-container");

  // Detect mobile device
  function isMobileDevice() {
    return (
      /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(
        navigator.userAgent,
      ) || window.innerWidth < 768
    );
  }
  const snowflakes = ["❅", "❄"];
  const newLocal = snowflakes[Math.floor(Math.random() * snowflakes.length)];
  function createSnowflake() {
    if (!container) return;

    const snowflake = document.createElement("div");
    snowflake.classList.add("snowflake");
    snowflake.textContent = newLocal;

    const isMobile = isMobileDevice();

    // Randomize position and animation properties
    snowflake.style.left = Math.random() * 100 + "vw";
    const duration = Math.random() * 3 + 5; // 3-5s
    snowflake.style.setProperty("--fall-duration", duration + "s");
    snowflake.style.opacity = Math.random().toString();

    // Smaller snowflakes on mobile (10-20px) vs desktop (20-40px)
    const sizeRange = isMobile
      ? Math.random() * 20 + 15
      : Math.random() * 20 + 20;
    snowflake.style.fontSize = sizeRange + "px";

    // Random horizontal movement range for zigzag effect
    const swayDistance = Math.random() * 120 + 40; // 40px to 160px
    const swayDirection = Math.random() > 0.5 ? 1 : -1; // Random direction
    snowflake.style.setProperty(
      "--sway-distance",
      swayDistance * swayDirection + "px",
    );

    container.appendChild(snowflake);

    // Remove snowflake after animation ends
    setTimeout(() => {
      snowflake.remove();
    }, duration * 1000);
  }

  function initSnowEffect() {
    const now = new Date();
    const month = now.getMonth(); // 0-11

    // Activate only in November (10), December (11), and January (0)
    if (month === 10 || month === 11 || month === 0) {
      // Reduce frequency on mobile: 2000ms (2s) vs 400ms on desktop
      const interval = isMobileDevice() ? 600 : 200;
      setInterval(createSnowflake, interval);
    }
  }

  initSnowEffect();
</script>

