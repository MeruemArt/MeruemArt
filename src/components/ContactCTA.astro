---
import Icon from "./Icon.astro";
---

<aside>
	<h2>¿Interesado en trabajar juntos?</h2>
	<form data-netlify="true" method="post" class="contact-form">
		<div class="input-group">
			<input
				type="text"
				name="name"
				placeholder="Tu nombre"
				autocomplete="name"
				required
			/>
			<input
				type="email"
				name="email"
				placeholder="Tu correo electrónico"
				autocomplete="email"
				required
			/>
		</div>
		<textarea name="message" placeholder="Tu mensaje" required rows="4"
		></textarea>
		<button type="submit" class="btn">
			Envíame un mensaje
			<Icon icon="paper-plane-tilt" size="1.2em" />
		</button>
	</form>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		width: 100%;
		max-width: 600px;
	}

	.input-group {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	input,
	textarea {
		width: 100%;
		padding: 0.75rem 1rem;
		background-color: var(--gray-999);
		border: 1px solid var(--gray-800);
		border-radius: 0.5rem;
		color: var(--gray-200);
		font-size: var(--text-md);
		font-family: inherit;
		transition:
			border-color var(--theme-transition),
			box-shadow var(--theme-transition);
	}

	input::placeholder,
	textarea::placeholder {
		color: var(--gray-400);
	}

	input:focus,
	textarea:focus {
		outline: none;
		border-color: var(--accent-regular);
		box-shadow: 0 0 0 2px var(--accent-overlay);
	}

	textarea {
		resize: vertical;
		min-height: 120px;
	}

	@media (min-width: 50em) {
		.input-group {
			flex-direction: row;
		}

		.input-group input {
			width: 50%;
		}
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}

	.btn {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		width: auto;
		min-width: 200px;
		border-radius: 999rem;
		border: none;
		background: var(--gradient-accent);
		color: var(--gray-999);
		cursor: pointer;
		font-weight: 600;
		font-size: var(--text-md);
		overflow: hidden;
		position: relative;
		box-shadow: var(--shadow-md);
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease;
	}

	.btn:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.btn:focus {
		outline: none;
		box-shadow: 0 0 0 2px var(--accent-overlay);
	}
</style>
